  "type": "library",
  "authors": [
    {
      "name": "Oshomo Oforomeh",
      "email": "oshomo.oforomeh2010@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": ">=5.6"
